<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.Dytila.gauravpc.dytilasp1.slabs"
    android:background="#dcdcdc"
    tools:showIn="@layout/activity_slabs">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="10dp"
                card_view:cardCornerRadius="0dp"
                app:cardBackgroundColor="#0d0d0d">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:id="@+id/goback"
                        android:src="@drawable/goback6"/>
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:src="@drawable/slabs_logo3"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="0dp"
                android:id="@+id/product"
                >
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="250dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:id="@+id/img1"
                            android:src="@drawable/fronttee"/>
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="250dp"
                            android:layout_toRightOf="@+id/img1"
                            android:id="@+id/img2"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/backtee"/>
                    </RelativeLayout>
                </HorizontalScrollView>
            </android.support.v7.widget.CardView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape2"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Full Name"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/fullname"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape2"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Mobile"
                android:inputType="number"
                android:id="@+id/mobile"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape2"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:id="@+id/email"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape2"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Full Address"
                android:id="@+id/address"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/size"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:background="@drawable/shape2"
                    android:layout_marginRight="10dp"
                    android:dropDownWidth="100dp"
                    android:layout_height="match_parent"></Spinner>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@drawable/shape2"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="Price : â‚¹299"
                    android:textSize="15dp"/>
            </LinearLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="order"
                android:id="@+id/orderButton"
                android:background="@drawable/shape1"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="0dp"
                android:id="@+id/features"
                >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_alignParentStart="true">

                <RadioGroup
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Fabric"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="100% Cotton"
                        android:textSize="16sp"/>
                </RadioGroup>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_alignParentStart="true">

                <RadioGroup
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Sleeves"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Half Sleeves"
                        android:textSize="16sp"/>
                </RadioGroup>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_alignParentStart="true">

                <RadioGroup
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Black"
                        android:textSize="16sp"/>
                </RadioGroup>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_alignParentStart="true">

                <RadioGroup
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Neck"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Round Neck"
                        android:textSize="16sp"/>
                </RadioGroup>
            </TableRow>
        </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                card_view:contentPadding="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="0dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:textColor="#0d0d0d"
                    android:gravity="center"
                    android:text="Strength Labs"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="40dp"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="Strength labs consists of a group of highly dedicated individuals that are committed to fitness. We help each other grow by sharing fitness information to the best of our knowledge. We provide you with the best quality products to optimize your fitness program. Get yourselves involved with the best and be a part of the family!"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>





</android.support.v4.widget.DrawerLayout>
