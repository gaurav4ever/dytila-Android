<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="0dp"
        android:layout_marginBottom="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/main_body">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/img"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#000000"
                    android:src="@drawable/avatar"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="username here"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/usernameText"
                    android:layout_toRightOf="@+id/img"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="date here"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/date"
                    android:layout_toRightOf="@+id/img"
                    android:layout_below="@+id/usernameText"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/img"
                    android:id="@+id/divider"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/divider"
                    android:text="answer here"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:id="@+id/answer" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_body"
                android:padding="5dp"
                android:background="#0cab0303"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/likeArea"
                    android:padding="5dp"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/likeImg"
                        android:src="@drawable/unlike"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"
                        android:textSize="12sp"
                        android:layout_toRightOf="@+id/likeImg"
                        android:paddingLeft="5dp"/>
                </RelativeLayout>
                <!--<RelativeLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/commentArea"-->
                    <!--android:layout_toRightOf="@+id/likeArea"-->
                    <!--android:padding="5dp"-->
                    <!--android:layout_marginLeft="5dp">-->
                    <!--<ImageView-->
                        <!--android:layout_width="15dp"-->
                        <!--android:layout_height="15dp"-->
                        <!--android:id="@+id/commentImg"-->
                        <!--android:src="@drawable/comment1"/>-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Comment"-->
                        <!--android:textSize="12sp"-->
                        <!--android:layout_toRightOf="@+id/commentImg"-->
                        <!--android:paddingLeft="5dp"/>-->
                <!--</RelativeLayout>-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/likeCoundArea"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/likesCount"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Likes"
                        android:id="@+id/l1"
                        android:layout_toRightOf="@+id/likesCount"
                        android:textSize="12sp"/>
                </RelativeLayout>
                <!--<RelativeLayout-->
                    <!--android:layout_width="wrap_content"-->
