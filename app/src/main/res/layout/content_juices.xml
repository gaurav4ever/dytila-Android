<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.Dytila.gauravpc.dytilasp1.Juices"
    tools:showIn="@layout/activity_juices">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="2dp"
            android:layout_marginBottom="0.5dp"
            android:layout_marginRight="0.5dp"
            card_view:cardBackgroundColor="#fff"
            android:id="@+id/header"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/headerLayout">
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            android:scaleType="fitXY"
                            android:id="@+id/headerImage1"
                            android:src="@drawable/meal_back_default"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:scaleType="fitXY"
                            android:id="@+id/headerImage2"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/headerImage1"
                            android:src="@drawable/meal_back_default"/>
                    </RelativeLayout>
                </HorizontalScrollView>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:id="@+id/goBackImage"
                    android:src="@drawable/goback6"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <GridView
            android:numColumns="2"
            android:gravity="center"
            android:columnWidth="100dp"
            android:background="#fff"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/grid"
            android:layout_below="@+id/header"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadingLayout"
            android:layout_centerInParent="true"
            >
            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorName="BallPulseIndicator"
                app:indicatorColor="#ab0303"
                android:layout_centerInParent="true"
                android:id="@+id/avi"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:id="@+id/no_connectionLayout">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/no_connection"
                android:id="@+id/no_connectionImg"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/no_connectionImg"
                android:text="Retry"
                android:layout_marginTop="20dp"
                android:id="@+id/retryButton"
                android:background="@drawable/shape"
                android:textColor="#fff"/>
        </RelativeLayout>

    </RelativeLayout>
    <!-- Navigation drawer Layout-->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:background="#fff"
        android:layout_gravity="start"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/navHeader">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="4dp"
                android:src="@drawable/avatar"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#000000"
                android:id="@+id/userImg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dytila Nutrition"
                android:textSize="12dp"
                android:id="@+id/username"
                android:textColor="#000"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/userImg"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dytilanutrition@gmail.com"
                android:textSize="10dp"
                android:id="@+id/user_email"
                android:textColor="#000"
                android:layout_below="@+id/username"
                android:layout_toRightOf="@+id/userImg"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/navHeader"
            android:id="@+id/divider1"
            android:background="@android:color/darker_gray"/>

        <include
            layout="@layout/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/options"
            android:layout_below="@+id/divider1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/footerText1"
            android:id="@+id/divider2"
            android:background="@android:color/darker_gray"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/divider2"
            android:src="@drawable/logo_main2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2016 dytila | All Rights Reserved"
            android:textColor="#000"
            android:id="@+id/footerText1"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/logo"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"/>


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
