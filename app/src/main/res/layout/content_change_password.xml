<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_screen"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.Dytila.gauravpc.dytilasp1.change_password"
    tools:showIn="@layout/activity_change_password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#77000000"
        android:padding="20dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/goback6"
            android:id="@+id/goback"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView19"
            android:layout_marginTop="40dp"
            android:padding="20dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="OLD PASSWORD"
                android:textSize="14sp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/oldPass"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="14sp"
                android:hint="NEW PASSWORD"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/newPass1"
                android:layout_below="@+id/oldPass"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="14sp"
                android:hint="CONFIRM PASSWORD"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/newPass2"
                android:layout_below="@+id/newPass1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
        </RelativeLayout>

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Change Password"
            android:id="@+id/button"
            android:background="#ccab0303"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Change Password"
            android:id="@+id/textView19"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginTop="30dp"
            />
    </RelativeLayout>


</RelativeLayout>
