<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc"
    android:id="@+id/drawer_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.Dytila.gauravpc.dytilasp1.dytilab"
    tools:showIn="@layout/activity_dytilab">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/toolbar_layout"
            />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:contentPadding="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/info2"
                    card_view:cardElevation="0dp"
                    card_view:cardCornerRadius="0dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="210dp"
                        android:src="@drawable/db2"
                        android:background="#fff"
                        />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="210dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expand Your Business With Dytila"
                            android:textColor="#484747"
                            android:id="@+id/username2"
                            android:gravity="center"
                            android:textSize="20dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Give us your contact and we will get back to you!"
                            android:gravity="center"
                            android:layout_marginTop="35dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="60dp"
                            android:hint="Email Id"
                            android:id="@+id/contact_email"
                            android:gravity="center"
                            android:background="#efefef"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:inputType="number"
                            android:layout_marginTop="120dp"
                            android:hint="Contact Number"
                            android:id="@+id/contact_mobile"
                            android:gravity="center"
                            android:background="#efefef"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="submit"
                            android:id="@+id/submitButton"
                            android:padding="10dp"
                            android:textColor="#fff"
                            android:background="@drawable/shape"
                            android:layout_marginTop="180dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="or call us at @8608353754"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:layout_below="@+id/submitButton"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:contentPadding="10dp"
                    android:layout_marginBottom="5dp"
                    card_view:cardElevation="0dp"
                    card_view:cardCornerRadius="0dp"
                    android:id="@+id/info3"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How Dytila business works ?"
                            android:textColor="#000"
                            android:id="@+id/header"
                            android:textSize="20dp"
                            android:gravity="center"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_below="@+id/header"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/divider"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/divider"
                            android:text="Step 1: Contact us! Let us know you are interested to represent and become a franchisee in your city."
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/text1"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text1"
                            android:text="Step 2: Some basic pre-requisites must be met-e.g. authentication of department of health services’ food establishment permit."
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/text2"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text2"
                            android:text="Step 3: An agreement will be made on the terms and conditions of Dytila ."
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/text3"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text3"
                            android:text="Step 4:  Your restaurant has become a proud member of Dytila's chain of fitness foods."
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/text4"
                            />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
    <!-- Navigation drawer Layout-->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:background="#fff"
        android:layout_gravity="start"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/navHeader">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="4dp"
                android:src="@drawable/avatar"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#000000"
                android:id="@+id/userImg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dytila Nutrition"
                android:textSize="12dp"
                android:id="@+id/username"
                android:textColor="#000"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/userImg"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dytilanutrition@gmail.com"
                android:textSize="10dp"
                android:id="@+id/user_email"
                android:textColor="#000"
                android:layout_below="@+id/username"
                android:layout_toRightOf="@+id/userImg"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/navHeader"
            android:id="@+id/divider1"
            android:background="@android:color/darker_gray"/>

        <include
            layout="@layout/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/options"
            android:layout_below="@+id/divider1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/footerText1"
            android:id="@+id/divider2"
            android:background="@android:color/darker_gray"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/divider2"
            android:src="@drawable/logo_main2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2016 dytila | All Rights Reserved"
            android:textColor="#000"
            android:id="@+id/footerText1"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/logo"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"/>


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
