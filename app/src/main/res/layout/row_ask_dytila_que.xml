<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="0dp"
        android:layout_marginBottom="12dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/main_body">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asked By"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/askedBy"
                    android:textSize="9sp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/askedBy"
                    android:id="@+id/user_who_asked_avatarImg"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#000000"
                    android:src="@drawable/avatar"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/user_who_asked_avatarImg"
                    android:layout_below="@+id/askedBy">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username here"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:id="@+id/username_who_asked"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="data here"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:id="@+id/date1"
                        android:layout_below="@+id/username_who_asked"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/answerLayout">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/answer_icon2"
                            android:id="@+id/img"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ANSWER"
                            android:textSize="10sp"
                            android:textColor="#ab0303"
                            android:layout_marginTop="2dp"
                            android:layout_below="@+id/img"
                            android:gravity="center"/>
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_who_asked_avatarImg"
                    android:text="question here"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:id="@+id/question"
                    android:textSize="16sp"
                    android:textColor="#000"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/question"
                    android:id="@+id/divider2"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answered By"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/answeredBy"
                    android:layout_below="@+id/divider2"
                    android:textSize="9sp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/user_who_answered_avatarImgavatarImg"
                    android:layout_below="@+id/answeredBy"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#000000"
                    android:src="@drawable/avatar"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="username here"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:id="@+id/username_who_answered"
                    android:layout_below="@+id/answeredBy"
                    android:layout_toRightOf="@+id/user_who_answered_avatarImgavatarImg"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="data here"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/date2"
                    android:layout_toRightOf="@+id/user_who_answered_avatarImgavatarImg"
                    android:layout_below="@+id/username_who_answered"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date2"
                    android:text="answer here"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/answer" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_body"
                android:padding="5dp"
                android:background="#0cab0303"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/likeArea"
                    android:padding="5dp"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:id="@+id/likeImg"
                        android:src="@drawable/unlike"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"
                        android:textSize="13sp"
                        android:layout_toRightOf="@+id/likeImg"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"/>
                </RelativeLayout>
                <!--<RelativeLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/commentArea"-->
                    <!--android:layout_toRightOf="@+id/likeArea"-->
                    <!--android:padding="5dp"-->
                    <!--android:layout_marginLeft="5dp">-->
                    <!--<ImageView-->
                        <!--android:layout_width="15dp"-->
                        <!--android:layout_height="15dp"-->
                        <!--android:id="@+id/commentImg"-->
                        <!--android:src="@drawable/comment1"/>-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Comment"-->
                        <!--android:textSize="12sp"-->
                        <!--android:layout_toRightOf="@+id/commentImg"-->
                        <!--android:paddingLeft="5dp"/>-->
                <!--</RelativeLayout>-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/likeCoundArea"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:id="@+id/likesCount"
                        android:textSize="13sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Likes"
                        android:id="@+id/l1"
                        android:layout_toRightOf="@+id/likesCount"
                        android:textSize="13sp"/>
                </RelativeLayout>
                <!--<RelativeLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="5dp"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:id="@+id/commentCountArea"-->
                    <!-->-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="0"-->
                        <!--android:id="@+id/commentsCount"-->
                        <!--android:textSize="12sp"/>-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text=" Comments"-->
                        <!--android:layout_toRightOf="@+id/commentsCount"-->
                        <!--android:textSize="12sp"/>-->
                <!--</RelativeLayout>-->
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>