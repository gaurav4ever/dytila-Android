<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.Dytila.gauravpc.dytilasp1.Ask_dytila_m_ques_ans"
    tools:showIn="@layout/activity_ask_dytila_m_ques_ans">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        android:background="#efefef"
        android:elevation="5dp"
        android:layout_alignParentTop="true"
        app:tabGravity="fill"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:layout_above="@+id/listCard"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="10dp"
        card_view:cardCornerRadius="0dp"
        android:id="@+id/listCard"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ab0303"
            android:orientation="horizontal"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/img1"
                android:layout_weight="0.25">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/read_img"
                    android:src="@drawable/feed_icon"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feed"
                    android:paddingBottom="2dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_below="@+id/read_img"
                    android:textColor="#fff"
                    android:id="@+id/img1Text"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/img2"
                android:layout_weight="0.25">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:padding="6dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/ask_img"
                    android:src="@drawable/ask_icon1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ask"
                    android:textSize="12sp"
                    android:paddingBottom="2dp"
                    android:gravity="center"
                    android:layout_below="@+id/ask_img"
                    android:textColor="#fff"
                    android:id="@+id/img2Text"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/img3"
                android:layout_weight="0.25">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:padding="4dp"
                    android:id="@+id/answer_img"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/answer_icon1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer"
                    android:textSize="12sp"
                    android:paddingBottom="2dp"
                    android:gravity="center"
                    android:layout_below="@+id/answer_img"
                    android:textColor="#fff"
                    android:id="@+id/img3Text"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/img4"
                android:layout_weight="0.25">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:padding="6dp"
                    android:id="@+id/myacc_img"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/my_feed_icon"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Feed"
                    android:paddingBottom="2dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_below="@+id/myacc_img"
                    android:textColor="#fff"
                    android:id="@+id/img5Text"
                    android:layout_centerHorizontal="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:id="@+id/divider1"
                    android:layout_alignParentBottom="true"
                    android:background="#d8ffffff"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
