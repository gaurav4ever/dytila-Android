<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:layout_marginTop="0dp"
    android:id="@+id/drawer_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.Dytila.gauravpc.dytilasp1.checkout"
    tools:showIn="@layout/activity_checkout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout"
            />
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/orderButton">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="1dp"
                android:id="@+id/info1">
                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                >
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meal Name"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:id="@+id/mealName"/>
                    <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/foodImg"
                    android:src="@drawable/default_img1"
                    android:layout_alignParentEnd="true"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mealName"
                        android:text="₹ 180"
                        android:layout_marginTop="5dp"
                        android:id="@+id/price"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cash On Delivery only!"
                        android:textColor="#ab0303"
                        android:layout_below="@+id/price"
                        android:id="@+id/t1"
                        android:layout_marginTop="10dp"
                        android:textSize="10sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/darker_gray"
                        android:id="@+id/divider4"
                        android:layout_below="@+id/foodImg"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/divider4"
                        android:id="@+id/quantityLayout"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:weightSum="1">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="0.5">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/minus"
                                android:layout_toLeftOf="@+id/countItem"
                                android:id="@+id/minus"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/countItem"
                                android:layout_margin="10dp"
                                android:textColor="#000"
                                android:textSize="20sp"
                                android:text="1"/>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_margin="10dp"
                                android:layout_toRightOf="@+id/countItem"
                                android:src="@drawable/add"
                                android:id="@+id/add"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/setTimeLayout"
                            android:layout_weight="0.5">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Time"
                                android:layout_centerInParent="true"
                                android:id="@+id/time"
                                android:textColor="#000"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    card_view:contentPadding="10dp"
                    card_view:cardElevation="1dp"
                    card_view:cardCornerRadius="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:foregroundGravity="center"
                    android:layout_below="@+id/info1"
                    android:id="@+id/info4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/deliveryIcon"
                        android:layout_margin="5dp"
                        android:src="@drawable/deliveryicon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Address"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:layout_toRightOf="@+id/deliveryIcon"
                        android:id="@+id/deliveryAddressHead"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:id="@+id/divider"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/darker_gray"
                        android:layout_below="@+id/deliveryAddressHead"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="WRITE HERE"
                        android:textSize="12sp"
                        android:padding="15dp"
                        android:id="@+id/pickupAddress"
                        android:layout_below="@+id/divider"
                        />
                </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="1dp"
                    card_view:cardCornerRadius="0dp"
                    android:id="@+id/info3"
                    android:layout_below="@+id/info4"
                    android:layout_marginBottom="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:id="@+id/moreorless"
                            android:src="@drawable/add"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/moreorless"
                            android:text="Have Coupen Code?"
                            android:textColor="#000"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:id="@+id/t6" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t6"
                            android:id="@+id/couponBody">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@android:color/darker_gray"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/divider5"
                                />
                            <EditText
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:textSize="12sp"
                                android:layout_below="@+id/divider5"
                                android:layout_alignParentStart="true"
                                android:id="@+id/couponText"
                                android:hint="ENTER CODE"
                                />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/divider5"
                                android:background="@drawable/shape"
                                android:text="Apply"
                                android:textColor="#fff"
                                android:id="@+id/couponApplyButton"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Percentage Discount"
                                android:layout_below="@+id/couponApplyButton"
                                android:layout_marginTop="10dp"
                                android:textSize="10sp"
                                android:textColor="#ab0303"
                                android:id="@+id/couponStatus"
                                />
                        </RelativeLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardElevation="1dp"
                    card_view:cardCornerRadius="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/info3"
                    android:id="@+id/info6"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/moreorless2"
                            android:layout_margin="5dp"
                            android:src="@drawable/add"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/moreorless2"
                            android:text="Addons on this pack"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:id="@+id/t4"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/t4"
                            android:id="@+id/addonBody">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:id="@+id/divider2"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@android:color/darker_gray"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/divider2"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:id="@+id/t5"
                                android:text="Just write any other item you want in this meal we will do it :)"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/t5"
                                android:layout_margin="10dp"
                                android:padding="15dp"
                                android:textSize="12sp"
                                android:hint="WRITE HERE"
                                android:id="@+id/addonText"
                                android:background="#efefef"/>
                            <Button
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:text="Add"
                                android:id="@+id/addonButton"
                                android:textColor="#fff"
                                android:layout_below="@+id/addonText"/>
                        </RelativeLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>


        </android.support.v4.widget.NestedScrollView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/orderButton"
            android:text="Order Now"
            android:padding="15dp"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:background="#ab0303"
            />


    </RelativeLayout>

    <!-- Navigation drawer Layout-->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/navigation_view"
        android:background="#fff"
        android:layout_gravity="start"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/navHeader">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="4dp"
                android:src="@drawable/avatar"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#000000"
                android:id="@+id/userImg"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dytila Nutrition"
                android:textSize="12dp"
                android:id="@+id/username"
                android:textColor="#000"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/userImg"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dytilanutrition@gmail.com"
                android:textSize="10dp"
                android:id="@+id/user_email"
                android:textColor="#000"
                android:layout_below="@+id/username"
                android:layout_toRightOf="@+id/userImg"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/navHeader"
            android:id="@+id/divider1"
            android:background="@android:color/darker_gray"/>

        <include
            layout="@layout/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/options"
            android:layout_below="@+id/divider1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/footerText1"
            android:id="@+id/divider10"
            android:background="@android:color/darker_gray"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/divider10"
            android:src="@drawable/logo_main2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2016 dytila | All Rights Reserved"
            android:textColor="#000"
            android:id="@+id/footerText1"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/logo"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"/>


    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
