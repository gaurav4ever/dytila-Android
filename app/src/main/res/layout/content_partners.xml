<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="com.Dytila.gauravpc.dytilasp1.partners"
    tools:showIn="@layout/activity_partners">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:contentPaddingTop="12dp"
        card_view:contentPaddingLeft="10dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="#d30707"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/goback6"
            android:id="@+id/goback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partners"
            android:textColor="#fff"
            android:textSize="20sp"
            android:id="@+id/head"
            android:layout_marginLeft="35dp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main"
            android:layout_marginTop="45dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Partner"
                android:textSize="20sp"
                android:textColor="#000"
                android:id="@+id/partnerText"
                android:gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chandnichowk"
                android:layout_below="@+id/partnerText"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>




    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
