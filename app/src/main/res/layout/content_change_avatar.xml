<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.Dytila.gauravpc.dytilasp1.changeAvatar"
    tools:showIn="@layout/activity_change_avatar">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/options"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Your Avatar"
                android:background="#d30707"
                android:textColor="#fff"
                android:gravity="center"
                android:padding="20dp"
                android:textSize="18sp"
                android:id="@+id/head"
                />
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@+id/head"
                android:layout_marginTop="30dp"
                android:id="@+id/chooseLayout"
                android:layout_centerInParent="true">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#ab0303"
                    android:src="@drawable/avatar"
                    android:id="@+id/avatar" />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/change_avatar"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/choose"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chooseLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload a square shaped Avatar"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:padding="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/options"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.495"
            android:text="OK"
            android:textSize="18sp"
            android:textColor="#fff"
            android:id="@+id/upload"
            android:gravity="center"
            android:background="#ab0303"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.005"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Cancel"
            android:textSize="18sp"
            android:textColor="#fff"
            android:id="@+id/cancel"
            android:background="#ab0303"
            android:padding="20dp"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>
